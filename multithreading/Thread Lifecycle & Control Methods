class TickTock extends Thread {
    private String word;

    TickTock(String word) { this.word = word; }

    public void run() {
        for (int i = 0; i < 5; i++) {
            System.out.println(word + " - " + Thread.currentThread().getName());
            try {
                Thread.sleep(500); 
            } catch (InterruptedException e) {
                e.printStackTrace();
            }
        }
    }
}

public class Day9Dem {
    public static void main(String[] args) throws InterruptedException {
        Thread t1 = new TickTock("Tick");
        Thread t2 = new TickTock("Tock");

        t1.start();
        t2.start();

        t1.join(); 
        t2.join();

        System.out.println("Done!");
    }
}
